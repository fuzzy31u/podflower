# PodFlower Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - Google Cloud / ADK Configuration
# =============================================================================

# Google API Key (from Google AI Studio)
GOOGLE_API_KEY=your_google_api_key_here

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google Cloud Region
GOOGLE_CLOUD_REGION=us-central1

# =============================================================================
# OPTIONAL - Service API Keys
# =============================================================================

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token_here

# WordPress Publishing
WORDPRESS_BASE_URL=https://momithub.com
WORDPRESS_USERNAME=your_wp_username
WORDPRESS_APP_PASSWORD=your_wp_app_password

# Unsplash (for featured images)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# X (Twitter) API
X_CONSUMER_KEY=your_x_consumer_key
X_CONSUMER_SECRET=your_x_consumer_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret
X_BEARER_TOKEN=your_x_bearer_token

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Skip certain agents for testing (comma-separated)
# SKIP_AGENTS=deploy_vercel,wordpress_publish,post_to_x 